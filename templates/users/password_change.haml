- extends "layouts/application.haml"
- load widget_tweaks

- block content
  .container
    .row
      .col-md-4.offset-md-4.user_login_page
        %h2 Password Change
        %form{method: "post"}
          {% csrf_token %}
          {{form.old_password.errors}}
          .form-group
            %label {{ form.old_password.label_tag }}
            {{ form.old_password|add_class:"form-control"|attr:"placeholder: Old Password" }}
          %hr
          {{form.new_password2.errors}}
          .form-group
            %label {{ form.new_password1.label_tag }}
            {{ form.new_password1|add_class:"form-control"|attr:"placeholder: New Password" }}
          .form-group
            %label {{ form.new_password2.label_tag }}
            {{ form.new_password2|add_class:"form-control"|attr:"placeholder: New Password Confirmation" }}
          %button.btn.btn-primary{type: "submit"}
            Update
        %hr
        %ul
          %li
            %a{href: "{% url 'profile' %}"}
              Profile
