{% extends "layouts/application.haml" %}
- block content
  {% load widget_tweaks %}
  .container
    .row
      .col-md-4.offset-md-4.user_login_page
        %h2 Sign Up
        %form{method: "post"}
          {% csrf_token %}
          {{form.username.errors}}
          .form-group
            %label {{ form.username.label_tag }}
            {{ form.username|add_class:"form-control"|attr:"placeholder: Username" }}
          {{form.email.errors}}
          .form-group
            %label {{ form.email.label_tag }}
            {{ form.email|add_class:"form-control"|attr:"placeholder: Email Address" }}
          %hr
          {{form.first_name.errors}}
          .form-group
            %label {{ form.first_name.label_tag }}
            {{ form.first_name|add_class:"form-control"|attr:"placeholder: First Name" }}
          {{form.last_name.errors}}
          .form-group
            %label {{ form.last_name.label_tag }}
            {{ form.last_name|add_class:"form-control"|attr:"placeholder: Last Name" }}
          %hr
          {{form.password2.errors}}
          .form-group
            %label {{ form.password1.label_tag }}
            {{ form.password1|add_class:"form-control"|attr:"placeholder: Password" }}
          .form-group
            %label {{ form.password2.label_tag }}
            {{ form.password2|add_class:"form-control"|attr:"placeholder: Password Confirmation" }}
          %button.btn.btn-primary{type: "submit"}
            Sign Up
        %hr
        %ul
          %li
            %a{href: "{% url 'login' %}"}
              Login
